@{
    ViewBag.Title = "SGS - Ark";
    Layout = "~/Views/Shared/Ark_Layout.cshtml";
    SSQLib.ServerInfo arkInfo = ((SGS_Web.Controllers.DefaultController)this.ViewContext.Controller).getSteamServerInfo("SimplifiedGamingSolutions.com", 27016);
}
<div class="jumbotron">
    <center>
        <h1>Simplified Gaming Solutions</h1>        
        @if (@arkInfo == null)
        {
            <p><b>Name:</b> "n/a"</p>
            <p><b>Address:</b> simplifiedgamingsolutions.com</p>
            <p><b>Status:</b> <font color="red"> Offline </font></p>
            <p><b>Players:</b> "n/a"</p>
        }
        else
        {
            <p><b>Name: </b>@arkInfo.Name</p>
            <p><b>Address: </b> simplifiedgamingsolutions.com</p>
            <p><b>Status: </b> <font color="green"> Online </font></p>
            <p><b>Players Online: </b> @arkInfo.PlayerCount/@arkInfo.MaxPlayers</p>
        }
        <img align="middle" title="" src="http://www.mmojam.com/wp-content/uploads/2015/06/Ark-Survival-Evolved.jpg" style="width:100%;height:100%;border-radius:2%" border="0" />
    </center>
</div>

<font color="white">
    <div class="row">
        <div class="col-md-4">
            <h2>Try our server!</h2>
            <p>Connect to our server running 24/7.</p>
            <p><a class="btn btn-default" href="https://www.facebook.com/groups/sgs.ark/">Facebook</a></p>
        </div>
        <div class="col-md-4">
            <h2>You have the Power</h2>
            <p>As the owner of your server you have the power. Give or take items from your friends, rule your world the way you want!</p>
            <p><a class="btn btn-default" href="">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Control your Mods</h2>
            <p>Drag and drop your favorite mods into your world.</p>
            <p><a class="btn btn-default" href="">Learn more &raquo;</a></p>
        </div>
    </div>
</font>
