@{
    ViewBag.Title = "SGS";
    
    SSQLib.ServerInfo arkInfo = ((SGS_Web.Controllers.DefaultController)this.ViewContext.Controller).getSteamServerInfo("SimplifiedGamingSolutions.com", 27016);
    SGS_Web.Minecraft.MinecraftServerInfo minecraftInfo = ((SGS_Web.Controllers.DefaultController)this.ViewContext.Controller).getMinecraftServerInfo("SimplifiedGamingSolutions.com", 25565);

}
<div class="row">
    <div class="col-md-4">
        <font color="black">
            <img align="middle" title="" src="~/Resources/game_controller.jpg" style="width:100%;height:100%;border-radius:2%" border="0" />
            <h2><a href="/Ark">Ark: Survival Evolved</a></h2>
            @if (@arkInfo == null)
            {
                <p><b>Name:</b> "n/a"</p>
                <p><b>Address:</b> simplifiedgamingsolutions.com</p>
                <p><b>Status:</b> <font color="red"> Offline </font></p>
                <p><b>Players:</b> "n/a"</p>
            }else
            {
                <p><b>Name: </b>@arkInfo.Name</p>
                <p><b>Address: </b> simplifiedgamingsolutions.com</p>
                <p><b>Status: </b> <font color="green"> Online </font></p>
                <p><b>Players Online: </b> @arkInfo.PlayerCount/@arkInfo.MaxPlayers</p>
            }
        </font>
        <font color="black">
            <h2><a href="/Minecraft">Minecraft</a></h2>
            @if (@minecraftInfo == null)
            {
                <p><b>Name:</b> n/a</p>
                <p><b>Address:</b> simplifiedgamingsolutions.com</p>
                <p><b>Status:</b> <font color="red"> Offline </font></p>
                <p><b>Players Online:</b> n/a</p>
            }
            else
            {
                <p><b>Address: </b> simplifiedgamingsolutions.com</p>
                <p><b>Status: </b> <font color="green"> Online </font></p>
                <p><b>Players: </b> @minecraftInfo.CurrentPlayerCount/@minecraftInfo.MaxPlayerCount</p>
            }
        </font>
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
            <input type="hidden" name="cmd" value="_s-xclick">
