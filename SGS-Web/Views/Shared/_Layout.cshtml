<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" type="image/x-icon" href="~/Resources/SGSLogo.png" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Simplified Gaming Solutions", "Index", "Default", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Default")</li>
                    <li>@Html.ActionLink("Buy", "Buy", "Default")</li>
                    <li>@Html.ActionLink("News", "News", "Default")</li>
                    <li>@Html.ActionLink("Downloads", "Downloads", "Default")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <font color="black">
                <div id="footer-container">
                    <ul class="col-md-4">
                        <b>About Us</b>
                        <li>@Html.ActionLink("About Us", "About", "Default")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Default")</li>
                    </ul>
                    <ul class="col-md-4">
                        <b>Help Us</b>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Default")</li>
                    </ul>
                </div>
                <p>&copy; @DateTime.Now.Year - Simplified Gaming Solutions</p>
            </font>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
